<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Demo Suite">
	<test name="Priority Test">
		<!-- select by classes -->
		<classes>
			<class name="unit.PriorityTest" />
		</classes>
	</test>

	<test name="Groups Test">
		<!-- filters -->
		<groups>
			<run>
				<include name="pet" />
			</run>
		</groups>
		<!-- select by packages -->
		<packages>
			<package name="unit" />
		</packages>
	</test>

</suite> 
